{
  "manifest_version": 3,
  "name": "Panopto Lecture Summarizer (Local)",
  "version": "0.1.0",
  "description": "Extracts Panopto captions and summarizes lectures with GPT-5 mini.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.panopto.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize lecture"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.panopto.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
